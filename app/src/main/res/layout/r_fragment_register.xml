<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context="idv.randy.me.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <LinearLayout
            android:id="@+id/llCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:layout_centerHorizontal="true"
                                                android:layout_margin="24dp"
                                                android:background="#000"
                                                app:cardCornerRadius="40dp">

                <TextView
                    android:id="@+id/tvCamera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#6A2C70"
                    android:gravity="center"
                    android:text="拍攝"
                    android:textColor="#fff"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:layout_centerHorizontal="true"
                                                android:layout_margin="24dp"
                                                android:background="#000"
                                                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/ivMemImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPhotoLib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:layout_centerHorizontal="true"
                                                android:layout_margin="24dp"
                                                android:background="#000"
                                                app:cardCornerRadius="40dp">

                <TextView
                    android:id="@+id/tvPhotoLib"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#6A2C70"
                    android:gravity="center"
                    android:text="從手機相簿選擇"
                    android:textColor="#fff"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etID"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="帳號"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/etPD"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="密碼"
            android:inputType="textPassword"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etMemName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="暱稱"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6A2C70"
            android:text="註冊"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btSet1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:text=""/>


    </LinearLayout>
</LinearLayout>
